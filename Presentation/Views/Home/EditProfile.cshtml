@model EditProfileViewModel
@{
    var profile = Model;

    ViewData["Title"] = "Профиль";
}


<div class="edit-card">
    <form id="creation-form" asp-controller="Home" asp-action="EditProfile" method="post" asp-antiforgery="true">
        <div class="sender-info">
            <p>Имя:</p><input data-val="false" name="FirstName" asp-for=FirstName value="@profile?.FirstName">
        </div>
        <div class="sender-info">
            <p>Фамилия:</p><input data-val="false" name="LastName" asp-for=LastName value="@profile?.LastName">
        </div>
        <div class="sender-info">
            <p class="sender-info">Отчество:</p><input data-val="false" name="SurName" asp-for=SurName value="@profile?.SurName">
        </div>
        <div class="sender-info">
            <p class="sender-info">Email:</p><input data-val="false" name="Email" asp-for=Email value="@profile?.Email">
        </div>
        <div class="sender-info">
            <p class="sender-info">Телефон:</p><input data-val="false" name="PhoneNumber" asp-for=PhoneNumber value="@profile?.PhoneNumber">
        </div>
        <div style="display: flex; gap: 0.5rem; margin-top: 1rem;">
            <p>Сменить пароль</p><input id="checkPass" type="checkbox" onchange="checkPasswordSection(this)">
        </div>
        <div class="password-section text-disabled">
            <div class="sender-info">
                <p class="sender-info">Старый пароль:</p>
                <div>
                    <input class="password-field" data-val="false" name="OldPassword" asp-for=OldPassword value="@profile?.OldPassword">
                    <span class="text-validation" asp-validation-for="OldPassword"></span>
                </div>
            </div>
            <div class="sender-info" style="display: flex;">
                <p class="sender-info">Новый пароль:</p>
                <div>
                    <input class="password-field" data-val="false" name="NewPassword" asp-for=NewPassword>
                    <span class="text-validation" asp-validation-for="NewPassword"></span>
                </div>
            </div>
            <div class="sender-info" style="display: flex;">
                <p class="sender-info">Подтвердите пароль:</p>
                <div>
                    <input class="password-field" data-val="false" name="RepeatPassword" asp-for=RepeatPassword value="@profile?.RepeatPassword">
                    <span class="text-validation" asp-validation-for="RepeatPassword"></span>
                </div>
            </div>
        </div>
    </form>
    <div class="button-container">
        <button class="next-step" type="submit" form="creation-form" disabled>Сохранить изменения</button>
    </div>
</div>

@await Html.PartialAsync("_ModelValidation")

@if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
{
    <link rel="stylesheet" href="~/Styles/EditProfile.css">
}
else
{
    <link rel="stylesheet" href="~/Styles/EditProfile.min.css?v = @DateTime.Now.Ticks">
}

<script src="~/Scripts/SubmitValidationManager.js"></script>
<script src="~/Scripts/EditProfile.js"></script>
