@model DocumentsViewModel


<form asp-controller="Profile" asp-action="UpdateDocuments" method="post">
    <div class="info-container">
        <div class="sender-info">
            <p>Дата рождения</p>
            <input type="date" asp-for="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")">
        </div>

        <div class="sender-info">
            <p>Серия и номер паспорта</p>
            <input type="text" asp-for="PassportNumber" value="@Model.PassportNumber">
        </div>

        <div class="sender-info">
            <p>Кем выдан</p>
            <input type="text" asp-for="IssuingAuthority" value="@Model.IssuingAuthority">
        </div>

        <div class="sender-info">
            <p>Дата выдачи</p>
            <input type="date" asp-for="IssueDate" value="@Model.IssueDate.ToString("yyyy-MM-dd")">
        </div>

        <div class="sender-info">
            <p>Идентификационный номер (ИНН)</p>
            <input type="text" asp-for="TaxIdentificationNumber" value="@Model.TaxIdentificationNumber">
        </div>

        <div class="sender-info">
            <p>Адрес регистрации</p>
            <input type="text" asp-for="RegistrationAddress" value="@Model.RegistrationAddress">
        </div>

        <div class="sender-info">
            <p>Адрес проживания</p>
            <input type="text" asp-for="ResidentialAddress" value="@Model.ResidentialAddress">
        </div>
    </div>

    <div class="actions">
        <button type="submit" class="btn btn-save">Сохранить</button>
    </div>
</form>
