@model CaseViewModel


<form id="creation-form" asp-controller="Case" asp-action="SaveClient" method="post">
    <div class="form-container" style="border: none;">
        <div class="form-grid">
            <div class="item-container">
                <label for="estimatedDaysToEnd">Предположительное количество дней до завершения</label>
                <div class="input-container">
                    <input id="estimatedDaysToEnd" name="EstimatedDaysToEnd" type="number" autocomplete="off" asp-for=EstimatedDaysToEnd>
                </div>
            </div>
            <div class="item-container">
                <label for="customer">Заказчик</label><div class="client-type">
                    <div class="input-container">
                        <button class="dropdown-button" type="button" onclick="CallDropdownManagement(this, '@Url.Action("GetClients", "Client")', 'lastName')">
                            >
                        </button>
                        <div id="dropdown-content" class="dropdown-content">
                        </div>
                        <input id="customer" name="Customer" type="text" autocomplete="off" disabled asp-for=Customer>
                        <span class="text-validation" asp-validation-for="Customer"></span>
                    </div>

                </div>

            </div>
            <div class="item-container">
                <label for="assignee">Исполнитель</label>
                <div class="client-type">
                    <button class="dropdown-button" type="button" onclick="CallDropdownManagement(this, '@Url.Action("GetClients", "Client")', 'lastName')"><</button>
                    <div id="dropdown-content" class="dropdown-content">
                    </div>
                    <div class="input-container">
                        <input id="assignee" name="Assignee" type="search" autocomplete="off" asp-for=Assignee>
                    </div>
                </div>

            </div>
            <div class="item-container">
                <label for="description">Описание</label>
                <div class="input-container">
                    <input id="description" name="Description" type="description" autocomplete="off" asp-for=Description>
                    <span class="text-validation" asp-validation-for="Description"></span>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/Scripts/DropdownManagement.js"></script>
