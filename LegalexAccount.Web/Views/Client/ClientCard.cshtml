@using LegalexAccount.Utility.Extensions
@model UserViewModel
@{
    var client = Model;

    ViewData["Title"] = "Профиль";
}

@(client is LegalViewModel
    ? await Html.PartialAsync("_LegalCard", client as LegalViewModel)
    : await Html.PartialAsync("_PersonCard", client as PersonViewModel))

@if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
{
    <link rel="stylesheet" href="~/Styles/ClientCard.css">
}
else
{
    <link rel="stylesheet" href="~/Styles/ClientCard.min.css?v = @DateTime.Now.Ticks">
}

<script src="~/Scripts/SubmitValidationManager.js"></script>
