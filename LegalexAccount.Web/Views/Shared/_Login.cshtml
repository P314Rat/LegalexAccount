@model LoginViewModel


<title>Вход в аккаунт</title>
<div class="login">
    <div class="form-container">
        <div class="logo">
            <img src="/images/logo-blue.png" alt="legalex">
            <h2>Войдите в свой аккаунт</h2>
        </div>
        <div class="login-form">
            <form asp-controller="Account" asp-action="Login" method="post">
                <div>
                    <label for="email" class="email-label">Электронная почта</label>
                    <div class="email">
                        <input id="email" name="Email" type="text" autocomplete="on" asp-for=Email>
                        <span class="text-validation" asp-validation-for="Email"></span>
                    </div>
                </div>

                <div>
                    <div class="password-container">
                        <label for="password" class="password-label">Пароль</label>
                        <div class="forgot-password">
                            <a href="#">Забыли пароль?</a>
                        </div>
                    </div>
                    <div class="password">
                        <input id="password" name="password" type="password" autocomplete="current-password" asp-for=Password>
                        <span class="text-validation" asp-validation-for="Password"></span>
                    </div>
                </div>

                <div>
                    <button type="submit">Войти</button>
                </div>
            </form>

            @*  <p class="mt-10 text-center text-sm text-gray-500">
            Not a member?
            <a href="#" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Start a 14 day free trial</a>
            </p> *@
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/Styles/Login.css">
@await Html.PartialAsync("_ModelValidation")
