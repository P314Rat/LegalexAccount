@{
    ViewData["Title"] = "Чаты";
}

<div class="chat-container">
    <!-- Список чатов -->
    <aside class="chat-sidebar">
        <h2>Чаты</h2>
        <ul class="chat-list">
            <li class="chat-item online">
                <img src="/images/avatar1.jpg" alt="User" class="avatar" />
                <span class="name">Андрей</span>
                <span class="status-indicator"></span>
            </li>
            <li class="chat-item">
                <img src="/images/avatar2.jpg" alt="User" class="avatar" />
                <span class="name">Екатерина</span>
                <span class="status-indicator"></span>
            </li>
        </ul>
    </aside>

    <!-- Окно чата -->
    <section class="chat-window">
        <header class="chat-header">
            <img src="/images/avatar1.jpg" alt="User" class="avatar" />
            <h2>Андрей</h2>
        </header>

        <div class="chat-messages">
            <div class="message received">
                <p>Привет! Как дела?</p>
                <span class="time">12:45</span>
            </div>
            <div class="message sent">
                <p>Привет! Все отлично, а у тебя?</p>
                <span class="time">12:46</span>
            </div>
        </div>

        <footer class="chat-input">
            <input type="text" placeholder="Введите сообщение..." />
            <label for="fileInput" class="attach-btn">📎</label>
            <input type="file" id="fileInput" style="display: none;" />
            <button class="send-btn">➤</button>
        </footer>
    </section>
</div>

@if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
{
    <link rel="stylesheet" href="~/Styles/ChatCard.css">
}
else
{
    <link rel="stylesheet" href="~/Styles/ChatCard.min.css?v = @DateTime.Now.Ticks">
}